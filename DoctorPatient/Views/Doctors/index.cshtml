@{
  Layout = "_Layout";
}

@using DoctorPatient.Models
<!-- model is list of doctor entries -->
<h1>General Hospital Doctors</h1>
<hr />

@if (@Model.Count == 0)
{
  <p>There are currently no doctors listed in the database.</p>
}
@foreach (Doctor doctor in Model)
{
  <h3>@Html.ActionLink($"{doctor.Name}", "Details", new {id = doctor.DoctorId})</h3>
}
<hr />

<p>@Html.ActionLink("Add a Doctor", "Create")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>

